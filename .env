# Database Configuration
POSTGRES_DB=bookstore_prod
POSTGRES_USER=bookstore_user
POSTGRES_PASSWORD=bookstore_secure_pass_123
POSTGRES_PORT=5433

# Redis Configuration
REDIS_PASSWORD=redis_secure_pass_123
REDIS_PORT=6379

# Application Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production_minimum_256_bits_long_enough_for_security
LOG_LEVEL=INFO
BACKEND_PORT=8080
FRONTEND_PORT=3000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000

# External Services
EXTERNAL_BOOK_SERVICE_URL=https://api.books.example.com
EXTERNAL_AUTHOR_SERVICE_URL=https://api.authors.example.com

# Feature Toggles
FEATURE_ADVANCED_SEARCH=true
FEATURE_RECOMMENDATIONS=true
FEATURE_EXTERNAL_INTEGRATION=false
FEATURE_MONITORING=true
FEATURE_CACHING=true

# Monitoring
MONITORING_ENABLED=true
METRICS_INTERVAL=60000

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_RPM=100
RATE_LIMIT_BURST=200

# File Upload
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=50MB
UPLOAD_DIR=/var/bookstore/uploads